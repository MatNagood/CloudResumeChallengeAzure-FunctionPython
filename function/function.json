{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "doc",
      "databaseName": "visitorscount",
      "containerName": "crcsite",
      "createIfNotExists": "true",
      "partitionKey": "/id",
      "connection": "AzureCosmosDBConnectionString"
    },
    {
      "name": "documents",
      "type": "cosmosDB",
      "databaseName": "visitorscount",
      "containerName": "crcsite",
      "id" : "Visitors",
      "partitionKey": "Visitors",
      "connection": "AzureCosmosDBConnectionString",
      "direction": "in"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}